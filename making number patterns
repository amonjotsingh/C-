#include<stdio.h>
#include <stdlib.h>

int main ()

{
int i,j,r,k=0;
printf("Enter number of rows: ");
scanf("%d",&r);
for(i=1;i<=r;++i,k=0)
    {
	for(j=1;j<=r-i;++j)
	{
		printf("  ");
	}
	int s=i-1;
	while(k!=2*i-1)
	{
		if(k<i)

		{
			printf ("%d ",++s);
			++k;
		}
		else
		{
			printf("%d ",--s);
			++k;
		}
	}
	printf("\n");
    }
return 0;
}
